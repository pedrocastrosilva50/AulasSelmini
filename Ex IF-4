import java.text.DecimalFormat;
import java.util.Scanner;

public class Ex4IF {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        DecimalFormat df = new DecimalFormat ("0.00");
        double y,x;
        System.out.print("Digite um valor para substituir o X, que seja maior que 5 e menor que -5: ");
        x = sc.nextDouble();

        y = 8/Math.sqrt(Math.pow(x,2)-25);


        if (x>5 || x<-5) {
            System.out.println("O resultado é "+df.format(y));
        }

        else {
            System.out.println("Leia as intruçôes novamente");
        }
    }
}
