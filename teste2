public class Teste2 {
    public static void main(String[] args) {
        int nota1, nota2, nota3, notaFinal;

        nota1 = 8;
        nota2 = 4;
        nota3 = 7;
        notaFinal = (nota1+nota2+nota3)/3;

        System.out.println("A primeira nota do aluno foi "+nota1+", " +
                "sua segunda nota foi "+nota2+", e sua ultima nota foi" +
                " "+nota3+", logo a média do aluno é "+notaFinal+".");

    }
}
