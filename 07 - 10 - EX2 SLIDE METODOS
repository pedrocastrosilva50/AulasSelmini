import java.util.Scanner;

public class Ex2Metodo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int valor1 ,valor2 ,valor3;

        System.out.println("Informe o primeiro valor positivo para o lado do triângulo: ");
        valor1 = sc.nextInt();
        System.out.println("Informe o segundo valor positivo para o lado do triângulo: ");
        valor2 = sc.nextInt();
        System.out.println("Informe o terceiro valor positivo para o lado do triângulo: ");
        valor3 = sc.nextInt();

        if (validar(valor1, valor2, valor3)){
            classificar(valor1, valor2, valor3);
        }
        else {
            System.out.println("Os valores não um formam triângulo");
        }
    }
    public static boolean validar(double l1, double l2, double l3){
        return (l1 < l2 + l3 && l2 < l1 + l3 && l3 < l1 + l2);
    }

    public static void classificar(double l1, double l2, double l3){
        if (l1 == l2 && l2 == l3){
            System.out.println("Triângulo Equilátero");
        } else if (l1 == l2 || l1 == l3 || l2 == l3){
            System.out.println("Triângulo Isósceles");
        }
        else {
            System.out.println("Triângulo Escaleno");
        }
        
    }
}

