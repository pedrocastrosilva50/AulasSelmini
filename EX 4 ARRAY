import java.util.Scanner;

public class array4 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Nomes dos meses
        String[] meses = {
                "Janeiro", "Fevereiro", "Março", "Abril",
                "Maio", "Junho", "Julho", "Agosto",
                "Setembro", "Outubro", "Novembro", "Dezembro"
        };

        double[] temperaturas = new double[12];
        double soma = 0;

        // Entrada das temperaturas
        for (int i = 0; i < meses.length; i++) {
            System.out.print("Digite a temperatura média de " + meses[i] + ": ");
            temperaturas[i] = sc.nextDouble();
            soma += temperaturas[i];
        }

        // Cálculo da média anual
        double mediaAnual = soma / meses.length;
        System.out.println("\nMédia anual das temperaturas: " + mediaAnual + "°C");

        // Mostrar meses acima da média
        System.out.println("\nMeses com temperatura acima da média anual:");
        for (int i = 0; i < meses.length; i++) {
            if (temperaturas[i] > mediaAnual) {
                System.out.println(meses[i] + " - " + temperaturas[i] + "°C");
            }
        }
    }
}
